{
    "appId": "com.angelodeved.persona-video-converter",
    "productName": "Persona Video Converter",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "electron/**/*"
    ],
    "extraResources": [
        {
            "from": "tools",
            "to": "tools"
        }
    ],
    "mac": {
        "category": "public.app-category.video"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },
    "linux": {
        "target": "AppImage"
    },
    "compression": "maximum",
    "asar": {
        "smartUnpack": true
    }
}